@{
    ViewData["Title"] = "Profile";
}

<div class="container py-4">
    <!-- Profile Section -->
    <div class="text-center mb-5 bg-primary bg-gradient text-white rounded-4 p-4" style="background: linear-gradient(135deg, #3498db, #2980b9);">
        <h1 class="fw-bold mb-4">Profile</h1>

        <div class="d-flex justify-content-center gap-5 mb-4">
            <div class="text-center">
                <div class="fs-3 fw-bold">73</div>
                <div class="text-white opacity-75">kg</div>
            </div>
            <div class="text-center">
                <div class="fs-3 fw-bold">178</div>
                <div class="text-white opacity-75">cm</div>
            </div>
            <div class="text-center">
                <div class="fs-3 fw-bold">23</div>
                <div class="text-white opacity-75">bmi</div>
            </div>
        </div>

        <h3 class="fw-bold mb-1">Alex Johnson</h3>
        <p class="text-white opacity-75 mb-4">32 • Male</p>

        <button class="btn btn-light text-primary px-4 rounded-pill">Edit Profile</button>
    </div>

    <!-- Health Goals Section -->
    <div class="mb-5">
        <h3 class="fw-bold mb-4">Health Goals</h3>

        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title fw-bold">Daily Steps</h5>
                <p class="card-text fs-5">10,000</p>
            </div>
        </div>

        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title fw-bold">Sleep Duration</h5>
                <p class="card-text fs-5">8 hours</p>
            </div>
        </div>

        <div class="card mb-3 border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title fw-bold">Weight Goal</h5>
                <p class="card-text fs-5">70 kg</p>
            </div>
        </div>

        <button class="btn btn-outline-primary w-100 rounded-pill mt-2">Update Goals</button>
    </div>

    <!-- Settings Section -->
    <div>
        <h3 class="fw-bold">Settings</h3>

        <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-medium">Account Settings</span>
                    <i class="bi bi-chevron-right text-muted"></i>
                </div>
            </a>

            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-medium">Privacy & Security</span>
                    <i class="bi bi-chevron-right text-muted"></i>
                </div>
            </a>

            <a href="#" class="list-group-item list-group-item-action border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-medium">Notifications</span>
                    <i class="bi bi-chevron-right text-muted"></i>
                </div>
            </a>

            <a href="#" class="list-group-item list-group-item-action border-0 py-3 text-danger">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-medium">Log Out</span>
                    <i class="bi bi-chevron-right text-danger"></i>
                </div>
            </a>
        </div>
    </div>
</div>