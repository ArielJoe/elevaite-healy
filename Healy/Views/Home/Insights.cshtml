@{
    ViewData["Title"] = "Insights";
}

@section Styles {
    <style>
        .insight-card {
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff;
        }
        .insight-card h5 {
            margin-bottom: 10px;
            font-size: 1.1rem;
        }
        .insight-card p {
            margin-bottom: 5px;
            color: #666;
        }
        .insight-card .recommendation {
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
        }
        .insight-icon {
            font-size: 1.5rem;
            margin-right: 10px;
        }
        .blue-card { border-left: 5px solid #007bff; }
        .green-card { border-left: 5px solid #28a745; }
        .red-card { border-left: 5px solid #dc3545; }
        .summary-card {
            border-left: 5px solid #17a2b8;
        }
        .change-box {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 5px;
            margin-right: 10px;
        }
        .positive { background-color: #d4edda; color: #155724; }
        .negative { background-color: #f8d7da; color: #721c24; }
        .neutral { background-color: #cce5ff; color: #004085; }
    </style>
}

<div class="container" style="">
    <h2>AI Insights</h2>
    <p class="text-muted">Your personalized health intelligence</p>
    <hr />

    @if (ViewBag.InsightsData != null)
    {
        var data = ViewBag.InsightsData;

        <!-- Sleep Quality -->
        <div class="insight-card blue-card">
            <div class="d-flex align-items-center">
                <i class="bi bi-moon insight-icon"></i>
                <div>
                    <h5>@data.SleepQuality.Title <small class="text-muted">@data.SleepQuality.Time</small></h5>
                    <p>@data.SleepQuality.Description</p>
                    <div class="recommendation">
                        <strong>RECOMMENDATION:</strong> @data.SleepQuality.Recommendation
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Pattern -->
        <div class="insight-card blue-card">
            <div class="d-flex align-items-center">
                <i class="bi bi-activity insight-icon"></i>
                <div>
                    <h5>@data.ActivityPattern.Title <small class="text-muted">@data.ActivityPattern.Time</small></h5>
                    <p>@data.ActivityPattern.Description</p>
                    <div class="recommendation">
                        <strong>RECOMMENDATION:</strong> @data.ActivityPattern.Recommendation
                    </div>
                </div>
            </div>
        </div>

        <!-- Hydration Improvement -->
        <div class="insight-card green-card">
            <div class="d-flex align-items-center">
                <i class="bi bi-droplet insight-icon"></i>
                <div>
                    <h5>@data.HydrationImprovement.Title <small class="text-muted">@data.HydrationImprovement.Time</small></h5>
                    <p>@data.HydrationImprovement.Description</p>
                    <div class="recommendation">
                        <strong>RECOMMENDATION:</strong> @data.HydrationImprovement.Recommendation
                    </div>
                </div>
            </div>
        </div>

        <!-- Elevated Stress Levels -->
        <div class="insight-card red-card">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle insight-icon"></i>
                <div>
                    <h5>@data.StressLevels.Title <small class="text-muted">@data.StressLevels.Time</small></h5>
                    <p>@data.StressLevels.Description</p>
                    <div class="recommendation">
                        <strong>RECOMMENDATION:</strong> @data.StressLevels.Recommendation
                    </div>
                </div>
            </div>
        </div>

        <!-- Weekly Health Summary -->
        <div class="insight-card summary-card">
            <div>
                <h5>@data.WeeklySummary.Title</h5>
                <p>@data.WeeklySummary.Description</p>
                <div class="d-flex flex-wrap mt-3">
                    @foreach (var change in data.WeeklySummary.Changes)
                    {
                        <span class="change-box @(change.Change.Contains("+") ? "positive" : change.Change.Contains("-") ? "negative" : "neutral")">@change.Change (@change.Category)</span>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <p>No insights data available.</p>
    }
</div>