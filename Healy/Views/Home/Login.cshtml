@model Healy.Models.DTOs.LoginDto
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healy</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-gradient: linear-gradient(to bottom right, #55c0a9, #1d9ba1);
            --button-gradient: linear-gradient(to right, #25a9b8, #157f91);
            --button-hover: linear-gradient(to right, #1d8e9e, #10636e);
            --primary-color: #25a9b8;
            --primary-dark: #157f91;
        }

        body {
            background: var(--primary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-container {
            background-color: white;
            padding: 2rem;
            width: 100%;
            max-width: 500px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .login-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-icon img {
            max-width: 100%;
            height: auto;
        }

        h2 {
            font-weight: 700;
            text-align: center;
            color: #333;
            margin-bottom: 0.5rem;
            font-size: 1.8rem;
        }

        .subtitle {
            color: #6c757d;
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1rem;
        }

        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 10px;
            padding: 0.75rem 1rem;
            border: 1px solid #ced4da;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(37, 169, 184, 0.25);
        }

        .btn-gradient {
            background: var(--button-gradient);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-size: 1rem;
            letter-spacing: 0.5px;
        }

        .btn-gradient:hover {
            background: var(--button-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(21, 127, 145, 0.3);
            color: white;
        }

        .btn-gradient:active {
            background: white !important;
            color: #333 !important;
            transform: translateY(0);
            box-shadow: none !important;
        }

        .form-footer {
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.95rem;
        }

        .form-footer a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s ease;
        }

        .form-footer a:hover {
            color: var(--primary-dark);
            text-decoration: underline;
        }

        .text-danger {
            font-size: 0.85rem;
        }

        .form-check-label {
            font-size: 0.9rem;
            color: #495057;
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .login-container {
                padding: 1.5rem;
            }

            h2 {
                font-size: 1.5rem;
            }

            .subtitle {
                font-size: 0.9rem;
                margin-bottom: 1.5rem;
            }

            .form-label, .form-control, .btn-gradient {
                font-size: 0.95rem;
            }
        }

        @@media (max-width: 576px) {
            body {
                padding: 15px;
            }

            .login-container {
                padding: 1.25rem;
            }

            .login-icon {
                width: 70px;
                height: 70px;
                margin-bottom: 1rem;
            }

            h2 {
                font-size: 1.3rem;
            }

            .form-group {
                margin-bottom: 1rem;
            }

            .form-control {
                padding: 0.65rem 0.9rem;
            }

            .btn-gradient {
                padding: 0.7rem;
                font-size: 0.95rem;
            }

            .form-footer {
                font-size: 0.9rem;
            }
        }

        @@media (max-width: 400px) {
            .login-container {
                padding: 1.5rem;
                margin: 0.5rem;
            }

            h2 {
                font-size: 1.2rem;
            }

            .subtitle {
                font-size: 0.85rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-icon">
            <img src="~/images/logo.png" alt="Healy Logo" width="80" height="80">
        </div>
        <h2>Welcome Back</h2>
        <p class="subtitle">Continue your wellness journey with us</p>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Email Address" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div>
                    <a href="#" class="text-decoration-none" style="color: var(--primary-color);">Forgot password?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-gradient w-100 mb-3">
                Login
            </button>
        </form>

        <div class="form-footer">
            <p class="mb-0">Don't have an account? <a asp-action="Register">Register here</a></p>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            // Responsive adjustments
            function adjustLayout() {
                if ($(window).width() < 768) {
                    // Mobile-specific adjustments
                } else {
                    // Desktop-specific adjustments
                }
            }

            // Run on load and resize
            adjustLayout();
            $(window).resize(adjustLayout);

            // Clear validation states on focus
            $('input').on('focus', function () {
                $(this).removeClass('is-invalid is-valid');
            });
        });
    </script>
</body>
</html>